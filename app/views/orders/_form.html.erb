<%= form_for(@order) do |f| %>
  <% if @order.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@order.errors.count, "error") %> prohibited this order from being saved:</h2>

      <ul>
      <% @order.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :city %><br>
    <%= f.select :city_id, options_for_select(City.all.collect { |city| [city.name, city.id] })%>
  </div>
  <div class="field">
    <%= f.label :supplier %><br>
    <%= f.select :supplier_id, options_for_select(Supplier.all.collect { |city| [city.first_name, city.id] })%>
  </div>
  <div class="field">
    <%= f.label :customer %><br>
    <%= f.select :customer_id, options_for_select(Customer.all.collect { |city| [city.first_name, city.id] })%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
